{{!-- This is the post loop - each post will be output using this markup --}}
{{#foreach posts}}
<article class="{{post_class}}">
    <section>
		<div>{{content}}</div>
		<div class="info">
			<div class="tags">{{tags separator=" "}}</div><div class="permalink-date-container">
				<a class="permalink" href="{{url}}">permalink</a>
				<span style="margin: 0 10px;">|</span>
				<time class="post-date" datetime="{{date format="MMMM-DD-YYYY"}}">{{date}}</time>
			</div>
			<hr>
		</div>
    </section>
</article>
{{/foreach}}

{{!-- Previous/next page links - displayed on every page --}}
{{pagination}}
